/* pages/person/person.wxss */
.containe{
  display: flex;
  width: 100%;
  height: 8em;
  background-color: red
}
.userinfo {  
  display: flex;
  align-self: center;
  margin-left: 15rpx;
  flex-direction: column

}  
  
.userinfo-avatar {  
  display: flex;
  width: 124rpx;  
  height: 124rpx;   
  border-radius: 50%; 
  align-self: center;
  margin-left: 20px
}  
  
.userinfo-nickname { 
  display: flex;
  width: 90px;
  height: 20px;
  font-size: 30rpx;
  color: #000;  
}  
.canvas{
  color: white;
  border-radius: 10px;
  padding-left: 20px;
  display: flex;
  width:75px;
  height: 16px;
  font-size: 12px;
  background:linear-gradient(to right,orange,yellow)
}

.bind{

  display: flex;
  align-items: center;
  font-size: 12px;
  height: 30px;
  background-color: #fff
}
.bind-b{
  margin-right: 20px;
  border-radius: 0;
  display: flex;
  justify-content: flex-end;
  line-height: 1.5;
  background-color: #fff;
  font-size: 15px;
  color: red;
  border: 1px solid red
}